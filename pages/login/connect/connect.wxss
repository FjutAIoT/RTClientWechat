Page {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background-color: #f4f4f4; */
}
.bg {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.title {
    color: rgb(0, 0, 0);
    font-size: 3.5rem;
    font-style: italic;
    margin: 10vh 0;
}
.box {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 5vw;
}
.row {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 8vh;
    margin-bottom: 2vh;
    border-bottom: 1px solid #999;
    /* border-radius: 2vh;
    background-color: rgba(255, 255, 255, 0.507);
    box-shadow: 0 0 5px #666; */
}
input {
    display: inline-block;
    width: 85vw;
    color: #000;
}
.phcolor {
    color: #999;
}
button {
    width: 85vw;
    height: 8vh;
    background-color: #317ef3;
    margin-bottom: 2vh;
    color: #fff;
    border-radius: 0 !important;
}
