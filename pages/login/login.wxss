/* login.wxss */
Page {
    width: 100%;
    height: 100%;
}

.user_content {
    padding: 0 30rpx;
    color: #fff;
    background: var(--mColor);
    position: relative;
    overflow: hidden;
}

.userinfo {
    padding: 50rpx 30rpx 60rpx;
    text-align: center;
}

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    box-shadow: 0 0 0 6rpx rgba(255, 255, 255, 0.5);
}

.userinfo-nickname {
    margin-top: 20rpx;
    display: block;
    font-size: medium;
}
