.desc {
    color: #777;
}
button {
    width: 100%;
}
.add {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    border-radius: 0 !important;
    background-color: #317ef3 !important;
    color: #fff;
}
.taskCard {
    width: 95vw;
    margin: 2vw auto;
    box-shadow: 0 0 2px #999;
}
.setTime {
    width: 100%;
    height: 100%;
    background-color: rgba(146, 146, 146, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100;
}
.taskBox {
    position: relative;
    background-color: #fff;
    width: 90%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 5px;
}
.taskBox > text {
    margin: 5vw 0;
}
.taskBox button {
    width: 60%;
    margin-bottom: 5vw;
}
.model-close {
    position: absolute;
    top: 10px;
    right: 10px;
}
.row {
    width: 80vw;
    margin: 2vw 0;
}
.row > input {
    width: 70vw;
    border-bottom: 1px solid #999;
    text-align: center;
    margin: 2vw auto;
}
.i-row input {
    width: 25vw;
    border-bottom: 1px solid #999;
    text-align: center;
}
.row label {
    margin: 0 5vw;
}
.i-row {
    width: 80vw;
    margin: 2vw 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
}
slider {
    width: 70vw;
}
