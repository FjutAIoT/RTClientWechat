Page {
    width: 100%;
    height: 100%;
}
.all1 {
    width: 100vw;
    height: 100vh;
    background-color: rgba(238, 238, 238, 0.5);
}
.all {
    width: 100%;
    height: 100%;
}

.title {
    font-weight: 500;
    margin: 3vh 0;
    background-color: #eee;
}
.row {
    display: flex;
    flex-direction: row;
    margin: 2vh 0;
}
picker {
    background-color: rgba(238, 238, 238, 0.2);
}
text {
    display: inline-block;
    width: 100vw;
    color: #666;
    text-align: center;
    /* margin-bottom: 2vh; */
    margin-top: -2vh;
}
.select_box {
    display: inline-block;
    width: 30vw;
    margin-left: 2vw;
    border: 1px solid #ddd;
    font-size: 0.8rem;
    font-weight: 100;
    color: #666;
}
.i-cell {
    position: static;
}
button {
    margin-top: 2vh;
    width: 90vw;
    border-radius: 0 !important;
    background-color: #317ef3 !important;
}
