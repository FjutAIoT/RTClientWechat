page {
    background: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-bottom: 220rpx;
}

.note-btn {
    position: fixed;
    bottom: 40rpx;
    left: 50%;
    margin-left: -70rpx;
    width: 140rpx;
    height: 140rpx;
    background: #2d8cf0;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 10px rgba(0, 49, 114, 0.5);
    transition: all 300ms ease;
    z-index: 1000;
}

.note-btn:active {
    background: #025bd1;
    box-shadow: none;
}

.note-btn image {
    width: 64rpx;
    height: 64rpx;
}

